<p id="notice"><%= notice %></p>

<h1><%= @patient.firstname %> <%= @patient.surname %>'s Conditions</h1>

<table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp">
  <tr>
      <th>Name</th>
      <th>Severity</th>
      <th>Medication</th>
      <th>Type</th>
      <th colspan="4"></th>
  </tr>

  <% for condition in @conditions %>

  <tr>
    <td><%= condition.name %></td>
    <td><%= condition.severity %></td>
    <td><%= condition.remedies %></td>
    <td><%= condition.condition_type %></td>
    <td></td>
    <td><%= link_to 'Details', patient_condition_path(@patient, condition), :class => 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %></td>
    <td><%= link_to 'Edit', edit_patient_condition_path(@patient, condition), :class => 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %></td>
    <td><%= link_to 'Delete', patient_condition_path(@patient, condition), method: :delete, data: { confirm: 'Are you sure you want to delete this condition?' }, :class => 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %></td>
  </tr>
  <% end %>
</table>

<br/>

<%= link_to 'Add New Condition', new_patient_condition_path(@patient), :class => 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>
<%= link_to 'Back to patient', @patients, :class => 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>
