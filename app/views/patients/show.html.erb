<p id="notice"><%= notice %></p>

<h1>Patient: <%= @patient.firstname %>   <%= @patient.surname %></h1>

<!-- Simple list -->
<style>
.demo-list-item {
  width: 300px;
}
</style>

<ul class="demo-list-item mdl-list">
  <li class="mdl-list__item">
    <span class="mdl-list__item-primary-content">
      <strong>Admission Date:</strong>
      <%= @patient.admission_date %>
  </li>
  <li class="mdl-list__item">
    <span class="mdl-list__item-primary-content">
      <strong>Date of Birth: </strong>
      <%= @doctor.dob %></span>
    </li>
  <li class="mdl-list__item">
    <span class="mdl-list__item-primary-content">
      <strong>Address:</strong>
      <%= @doctor.address %></span>
  </li>
  <li class="mdl-list__item">
    <span class="mdl-list__item-primary-content">
      <strong>Phone:</strong>
      <%= @doctor.phone %>
  </li>
  <li class="mdl-list__item">
    <span class="mdl-list__item-primary-content">
      <strong>Email:</strong>
      <%= @doctor.email %>
  </li>
  <li class="mdl-list__item">
    <span class="mdl-list__item-primary-content">
      <strong>Health:</strong>
      <%= @patient.healthy %>
  </li>
  <li class="mdl-list__item">
    <span class="mdl-list__item-primary-content">
      <strong>Notes:</strong>
      <%= @patient.notes %>
  </li>
</ul>

<%= link_to 'Edit details', edit_doctor_patient_path(@doctor, @patient), :class => 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>
<%= link_to 'Delete', doctor_patient_path(@doctor, @patient), method: :delete, data: { confirm: 'Are you sure you want to delete this patient?' }, :class => 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>

<!-- Display the conditions of the patient -->
<h1><%= @patient.firstname %>  <%= @patient.surname %>'s Conditions</h1>

<ul class="demo-list-item mdl-list">
  <% @patient.conditions.each do |condition| %>
    <li class="mdl-list__item">
      <span class="mdl-list__item-primary-content">
        <strong>Name:</strong>
        <%= condition.name %>
    </li>
  <% end %>
</ul>

<%= link_to 'Show Condition Info', patient_conditions_path(@patient), :class => 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>
<%= link_to 'Add New Condition', new_patient_condition_path(@patient), :class => 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>

<br/>

<hr/>

<%= link_to 'Back to home', doctors_path, :class => 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>
<%= link_to 'Back to patients', doctor_patients_path(@doctor), :class => 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>
