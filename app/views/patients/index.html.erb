<h1>Patients of  <%= @doctor.firstname %> <%= @doctor.surname %></h1>
<table>
  <tr>
      <th>Firstname</th>
      <th>Surname</th>
      <th>Admisson Date</th>
      <th>Dob</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Healty</th>
      <th>Notes</th>
      <th colspan="3"></th>
  </tr>
  <% for patient in @patients %>
  <tr>
    <td><%= patient.firstname %></td>
    <td><%= patient.surname %></td>
    <td><%= patient.admission_date %></td>
    <td><%= patient.dob %></td>
    <td><%= patient.address %></td>
    <td><%= patient.phone %></td>
    <td><%= patient.email %></td>
    <td><%= patient.healthy %></td>
    <td><%= patient.notes %></td>
    <td><%= link_to 'Show', doctor_patient_path(@doctor, patient) %></td>
    <td><%= link_to 'Edit', edit_doctor_patient_path(@doctor, patient) %></td>
    <td><%= link_to 'Delete', doctor_patient_path(@doctor, patient), method: :delete, data: { confirm: 'Are you sure you want to delete this patient?' } %></td>
  </tr>
  <% end %>
</table>
<br />
<%= link_to 'New patient', new_doctor_patient_path(@doctor) %>
<%= link_to 'Back to doctor', @doctor %>
