<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--2--col"></div>
  <div class="mdl-cell mdl-cell--8--col">
    <h1>Log in</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'mdl-textfield__input', :id => 'login_email', :type => 'text' %>
      </div>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", :class => 'mdl-textfield__input', :id => 'login_password', :type => 'password' %>
      </div>

    <br/>

    <% if devise_mapping.rememberable? -%>
      <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="login_checkbox">
        <input type="checkbox" id="login_checkbox" class="mdl-checkbox__input">
        <span class="mdl-checkbox__label">
          <%= f.label :remember_me %>
        </span>
      </label>
    <% end -%>

    <br/>
    <br/>

      <div class="actions">
        <%= f.submit "Log in", :class => 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
  <div class="mdl-cell mdl-cell--2--col"></div>
</div>
