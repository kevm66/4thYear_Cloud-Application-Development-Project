<%= form_with(model: doctor, local: true) do |form| %>

  <% if doctor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(doctor.errors.count, "error") %> prohibited this doctor from being saved:</h2>
      <ul>
      <% doctor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= form.label :firstname, :for => 'dfirstname' %>
    <%= form.text_field :firstname, :class => 'mdl-textfield__input', :id => 'dfirstname', :type => 'text' %>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= form.label :surname, :for => 'dsurname'  %>
    <%= form.text_field :surname, :class => 'mdl-textfield__input', :id => 'dsurname', :type => 'text' %>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= form.label :dob, :for => 'ddob'  %>
    <%= form.date_select :dob, :class => 'mdl-textfield__input', :id => 'ddob', :type => 'text'  %>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= form.label :address, :for => 'daddress'  %>
    <%= form.text_field :address, :class => 'mdl-textfield__input', :id => 'daddress', :type => 'text'  %>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= form.label :phone, :for => 'dphone'  %>
    <%= form.text_field :phone, :class => 'mdl-textfield__input', :id => 'dphone', :type => 'text'  %>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= form.label :email, :for => 'demail'  %>
    <%= form.text_field :email, :class => 'mdl-textfield__input', :id => 'demail', :type => 'text'  %>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= form.label :specialisation, :for => 'dspecialisation'  %>
    <%= form.text_field :specialisation, :class => 'mdl-textfield__input', :id => 'dspecialisation', :type => 'text'  %>
  </div>

  <br/>

  <div class="actions">
    <%= form.submit "Update details", :class => ' mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>
  </div>

  <br/>
  <br/>

<% end %>
