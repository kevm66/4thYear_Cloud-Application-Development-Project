<p id="notice"><%= notice %></p>

<h1>Doctors</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Surname</th>
      <th>Dob</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Specialisation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.firstname %></td>
        <td><%= doctor.surname %></td>
        <td><%= doctor.dob %></td>
        <td><%= doctor.address %></td>
        <td><%= doctor.phone %></td>
        <td><%= doctor.email %></td>
        <td><%= doctor.specialisation %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Delete', doctor, method: :delete, data: { confirm: 'Are you sure you want to delete this doctor?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

